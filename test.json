{
    "schemaVersion": "1.0.0",
    "configType": "environment",
    "settings": {
        "emailVerification": {
            "auto": true,
            "required": false
        },
        "apiVersion": 3
    },
    "collections": {
        "books": {
            "type": "internal",
            "permissions": {
                "all-users": {
                    "create": "always",
                    "read": "always",
                    "update": "always",
                    "delete": "always"
                }
            }
        },
        "user": {
            "type": "internal",
            "permissions": "shared"
        },
        "authors": {
            "type": "internal",
            "permissions": "shared"
        },
        "posts": {
            "type": "internal",
            "permissions": "shared"
        },
        "custom-authors": {
            "type": "internal",
            "permissions": "shared"
        },
        "_blob": {
            "type": "internal",
            "permissions": "shared"
        }
    },
    "collectionHooks": {
        "books": {
            "onPostFetch": {
                "type": "internal",
                "codeFile": "./hooks/books/onPostFetch.js"
            }
        },
        "authors": {
            "onPreFetch": {
                "type": "internal",
                "codeFile": "./hooks/authors/onPreFetch.js"
            }
        },
        "posts": {
            "onPostFetch": {
                "type": "internal",
                "codeFile": "./hooks/posts/onPostFetch.js"
            }
        },
        "custom-authors": {
            "onPreFetch": {
                "type": "internal",
                "codeFile": "./hooks/custom-authors/onPreFetch.js"
            }
        }
    },
    "customEndpoints": {
        "Fetch_Collection_Items": {
            "type": "internal",
            "codeFile": "./endpoints/Fetch_Collection_Items.js"
        },
        "deleteUsers": {
            "type": "external",
            "service": "FSO_Martin",
            "serviceEnvironment": "Default",
            "handlerName": "userClear"
        },
        "dimo": {
            "type": "internal",
            "codeFile": "./endpoints/dimo.js"
        },
        "geolocation": {
            "type": "internal",
            "codeFile": "./endpoints/geolocation.js"
        },
        "getFileMetadata": {
            "type": "internal",
            "codeFile": "./endpoints/getFileMetadata.js"
        },
        "logTime": {
            "type": "internal",
            "codeFile": "./endpoints/logTime.js"
        },
        "sendPushtTest": {
            "type": "internal",
            "codeFile": "./endpoints/sendPushtTest.js"
        },
        "testBuffer": {
            "type": "internal",
            "codeFile": "./endpoints/testBuffer.js"
        },
        "testCodeDoc": {
            "type": "internal",
            "codeFile": "./endpoints/testCodeDoc.js"
        },
        "testTraktorsCode": {
            "type": "internal",
            "codeFile": "./endpoints/testTraktorsCode.js"
        },
        "uploadFromBase64": {
            "type": "external",
            "service": "FSO_Martin",
            "serviceEnvironment": "Default",
            "handlerName": "uploadFromBase64"
        }
    },
    "commonCode": {
        "utils": {
            "codeFile": "./common/utils.js"
        }
    },
    "roles": {
        "customRole": {
            "name": "customRole"
        },
        "myRole": {
            "name": "myRole"
        },
        "HumanResourcesDirector": {
            "name": "HumanResourcesDirector",
            "description": "Director-level employees at the Human Resources department"
        }
    },
    "groups": {
        "G": {
            "groups": [
                "G1",
                "G5"
            ]
        }
    }
}